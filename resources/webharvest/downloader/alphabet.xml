<?xml version="1.0" encoding="UTF-8"?>
<config>
	<include path="allLinks.xml"/>
	
	<!-- 
        Download all links to apps with this category.
        
        @param pageUrl       - URL of starting page
        @param path    - name of file with app links
     -->
    <function name="categoryLinks">
        <return>
			<var-def name="alphabetLinksXpath">//ul[@class="list alpha"]/li/a/@href</var-def>		  			
		    <var-def name="content">
		    	<html-to-xml>
		        	<http url="${pageUrl}"/>
		        </html-to-xml>
		    </var-def>
		    <var-def name="alphabetLinks">
		    	<xpath expression="${alphabetLinksXpath}">
		        	<var name="content"/>
		        </xpath>
			</var-def>
		    <loop item="alphabetLink" index="i">
				<list><var name="alphabetLinks"/></list>
				<body> 
					<var-def name="allLinksLetter">    
						<call name="allLinks">
							<call-param name="pageUrl"><var name="alphabetLink"/></call-param>
							<call-param name="path"><var name="path"/></call-param>
						</call>
					</var-def>	
				</body>
			</loop>	
		</return>
    </function>	
