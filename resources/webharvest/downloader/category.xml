<?xml version="1.0" encoding="UTF-8"?>
<config>
	<include path="alphabet.xml"/>
	
	<var-def name="categoriesLinksXpath">//ul[@class="list column first"]/li/a/@href</var-def>
    <var-def name="categoriesXpath">//ul[@class="list column first"]/li/a/text()</var-def>
	<var-def name="path">E:\VANS\My Dropbox\programms\Java\FilmRecommendation\resources\webharvest\result\allLinks.txt</var-def>
	<var-def name="pageUrl">http://itunes.apple.com/us/genre/ios-games/id6014?mt=8</var-def>
    <var-def name="content">
    	<html-to-xml>
        	<http url="${pageUrl}"/>
        </html-to-xml>
    </var-def>

    <var-def name="categoriesLinks">
    	<xpath expression="${categoriesLinksXpath}">
        	<var name="content"/>
        </xpath>
    </var-def>
    <file action="write" path="${path}" charset="UTF-8">						
	</file>	
    <loop item="item" index="i">
		<list><var name="categoriesLinks"/></list>
		<body>           	
			<call name="categoryLinks">
				<call-param name="pageUrl"><var name="item"/></call-param>
				<call-param name="path"><var name="path"/></call-param>
			</call>	
		</body>
	</loop> 
</config>